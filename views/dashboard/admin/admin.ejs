<%- layout('layouts/boilerplate') %>

<div class="container mt-4">

    <!-- ADMIN HEADER -->
    <h2 class="fw-bold">Admin Dashboard</h2>
    <p class="text-muted">Welcome, <%= user.username %></p>

    <!-- STATS SECTION -->
    <div class="row mt-4 g-3">

        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <h6>Total Users</h6>
                <h3><%= stats.totalUsers %></h3>
                <a href="/admin/users" class="small text-decoration-none">Manage Users →</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <h6>Total Books</h6>
                <h3><%= stats.totalBooks %></h3>
                <a href="/books" class="small text-decoration-none">Manage Books →</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <h6>Issued Books</h6>
                <h3><%= stats.issuedBooks %></h3>
                <a href="/transactions" class="small text-decoration-none">View Issued →</a>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card p-3 shadow-sm">
                <h6>Overdue Books</h6>
                <h3 class="text-danger"><%= stats.overdueBooks %></h3>
                <a href="/transactions/overdue" class="small text-decoration-none">Check Overdue →</a>
            </div>
        </div>

    </div>

    <!-- QUICK ACTIONS -->
    <div class="row mt-5 g-3">
        <h4 class="fw-bold mb-3">Quick Actions</h4>

        <div class="col-md-3">
            <a href="/admin/users/add" class="text-decoration-none">
                <div class="card p-3 text-center shadow-sm">
                    <i class="bi bi-person-plus fs-2"></i>
                    <p class="mt-2">Add User</p>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="/books/add" class="text-decoration-none">
                <div class="card p-3 text-center shadow-sm">
                    <i class="bi bi-journal-plus fs-2"></i>
                    <p class="mt-2">Add Book</p>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="/transactions" class="text-decoration-none">
                <div class="card p-3 text-center shadow-sm">
                    <i class="bi bi-arrow-left-right fs-2"></i>
                    <p class="mt-2">Issue / Return</p>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="/reports" class="text-decoration-none">
                <div class="card p-3 text-center shadow-sm">
                    <i class="bi bi-bar-chart fs-2"></i>
                    <p class="mt-2">Reports</p>
                </div>
            </a>
        </div>
    </div>

    <!-- RECENT ACTIVITY -->
    <div class="row mt-5">
        <h4 class="fw-bold mb-3">Recent Activity</h4>

        <div class="card shadow-sm">
            <div class="card-body">

                <% if (recent.length === 0) { %>
                    <p class="text-muted">No recent activity.</p>
                <% } else { %>

                    <ul class="list-group">
                        <% recent.forEach(item => { %>
                            <li class="list-group-item"><%= item %></li>
                        <% }); %>
                    </ul>

                <% } %>

            </div>
        </div>
    </div>

</div>

<style>
.card:hover {
    transform: translateY(-3px);
    transition: 0.2s ease;
}
</style>
